@model List<string>
@{
    ViewData["Title"] = "Database Backups";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-primary">
            <i class="bi bi-database-fill-gear me-2"></i>@ViewData["Title"]
        </h1>
        <form asp-action="CreateBackup" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-database-fill-add me-1"></i>Create New Backup
            </button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Backup File Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var backup in Model)
                            {
                                <tr>
                                    <td>@backup</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DownloadBackup" asp-route-backupFileName="@backup"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                            <form asp-action="RestoreBackup" method="post" class="mx-1">
                                                <input type="hidden" name="backupFileName" value="@backup" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning"
                                                        onclick="return confirm('Are you sure you want to restore this backup? This will overwrite the current database.')">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                                </button>
                                            </form>
                                            <form asp-action="DeleteBackup" method="post">
                                                <input type="hidden" name="backupFileName" value="@backup" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this backup?')">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-database-fill-x" style="font-size: 3rem; color: #6c757d;"></i>
                    <h4 class="mt-3">No database backups found</h4>
                    <p class="text-muted">Create your first backup using the button above</p>
                </div>
            }
        </div>
    </div>
</div>
