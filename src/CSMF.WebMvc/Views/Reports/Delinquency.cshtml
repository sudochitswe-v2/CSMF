@model ICollection<DelinquencyReportViewModel>
@using CSMF.WebMvc.Extensions
@{
    ViewBag.Title = "Delinquency Report";
}

<a class="btn btn-success mb-3" href="@Url.Action("ExportDelinquencyToExcel")">
    Export to Excel
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Loan ID</th>
            <th>Customer</th>
            <th>Installment</th>
            <th>Due Date</th>
            <th>Principal</th>
            <th>Interest</th>
            <th>Fee</th>
            <th>Total</th>
            <th>Paid</th>
            <th>Outstanding</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LoanApplicationId</td>
                <td>@item.CustomerName</td>
                <td>@item.InstallmentNumber</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@item.PrincipalAmount.ToString("N0")</td>
                <td>@item.InterestAmount.ToString("N0")</td>
                <td>@item.FeeAmount.ToString("N0")</td>
                <td>@item.TotalAmount.ToString("N0")</td>
                <td>@item.AmountPaid.ToString("N0")</td>
                <td>@item.OutstandingAmount.ToString("N0")</td>
                <td>
                    <span class="badge @item.Status.ToPaymentStatusBootstrapClass()">@item.Status</span>
                </td>
            </tr>
        }
    </tbody>
</table>
