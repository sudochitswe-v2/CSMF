@model PaginatedSearchResult<CustomerReadViewModel>
@{
    ViewData["Title"] = "Search customer for loan applying";
}

<div class="container mt-4">

    <!-- Search Form -->
    <div class="row mb-4 g-3">
        <div class="col-md-8">
            <form method="get" asp-action="SelectCustomer">
                <div class="input-group">
                    <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search by Name or NRC" class="form-control" />
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Customer Table -->
    @if (Model.Items.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>NRC</th>
                            <th>Branch</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Items)
                        {
                            <tr>
                                <td>@customer.FirstName @customer.LastName</td>
                                <td>@customer.Email</td>
                                <td>@customer.Phone</td>
                                <td>@customer.IdentificationNumber</td>
                                <td>@customer.Branch?.Name</td>
                                <td>
                                    <a asp-controller="LoanApplications" asp-action="Create" asp-route-customer="@customer.Id"
                                       class="btn btn-sm btn-outline-success me-2">
                                        <i class="bi bi-eye"></i> Select
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination & Page Size Controls -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        Showing @Model.Items.Count() of @Model.TotalItems customers
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination mb-0">
                            @{
                                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                            }

                            <li class="page-item @prevDisabled">
                                <a class="page-link" asp-action="SelectCustomer"
                                   asp-route-page="@(Model.PageNumber - 1)"
                                   asp-route-size="@Model.PageSize"
                                   asp-route-searchTerm="@Model.SearchTerm">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="SelectCustomer"
                                       asp-route-page="@i"
                                       asp-route-size="@Model.PageSize"
                                       asp-route-searchTerm="@Model.SearchTerm">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @nextDisabled">
                                <a class="page-link" asp-action="SelectCustomer"
                                   asp-route-page="@(Model.PageNumber + 1)"
                                   asp-route-size="@Model.PageSize"
                                   asp-route-searchTerm="@Model.SearchTerm">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No customers found.</div>
    }

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>
