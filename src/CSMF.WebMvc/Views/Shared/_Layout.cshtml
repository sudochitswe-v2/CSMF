<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Notiflix CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notiflix@3.2.6/dist/notiflix-3.2.6.min.css" />

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            z-index: 1040;
            background-color: #fff;
        }

        .sidebar-menu {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }


        .main-content {
            margin-left: 250px;
            transition: margin-left 0.3s ease;
            width: calc(100% - 250px);
        }



        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }

            .mobile-sidebar-toggle {
                display: block !important;
                position: fixed;
                top: 15px;
                right: 20px;
                z-index: 1050;
                font-size: 1.5rem;
            }

            .offcanvas-start.offcanvas-show {
                transform: translateX(0);
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Sidebar Toggle -->
    <button class="btn btn-primary mobile-sidebar-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
        <i class="bi bi-list"></i>
    </button>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="sidebar bg-white offcanvas-md offcanvas-start show" tabindex="-1" data-bs-backdrop="false">
            @* <div class="offcanvas-header d-md-none"></div> *@
            <div class="offcanvas-body">
                <div class="sidebar-menu d-flex flex-column align-items-center">
                    @await Html.PartialAsync("_Sidebar")
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow-1 px-4 pt-4 main-content">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
                <h5 class="h6">@ViewBag.Title</h5>
            </div>
            @RenderBody()
        </main>
    </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Notiflix JS -->
    <script src="https://cdn.jsdelivr.net/npm/notiflix@3.2.6/dist/notiflix-aio-3.2.6.min.js"></script>
    <script>

        function confirmDelete(id,item = "") {
             Notiflix.Confirm.init({
            titleColor:"#dc3545",
            okButtonBackground: '#dc3545',  // Bootstrap Red (Danger)
            cancelButtonBackground: '#6c757d', // Optional: Bootstrap Secondary
        });
            Notiflix.Confirm.show(
                'Confirm Deletion',
                `Are you sure you want to delete this ${item}?`,
                'Yes, Delete',
                'Cancel',
                function okCb() {
                    document.getElementById('delete-form-' + id).submit();
                },
                function cancelCb() {
                    // Do nothing
                }
            );
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>