@model IEnumerable<LoanReadViewModel>

@{
    ViewData["Title"] = "Loan Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New
    </a>
</div>

<div class="row g-3">
    @if (Model.Any())
    {
        @foreach (var loan in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@loan.ProductTitle</h5>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Min - Max:</strong> @loan.MinPrincipalAmount - @(loan.MaxPrincipalAmount == null ? "" : loan.MaxPrincipalAmount)</li>
                            <li><strong>Duration:</strong> @loan.MinDurationValue @(loan.MaxDurationValue != null ? $" - {loan.MaxDurationValue}" : "") @loan.DurationPeriod</li>
                            <li><strong>Interest:</strong> @loan.InterestMethod</li>
                            <li><strong>Interest Rate:</strong> @loan.InterestRate%</li>
                            <li><strong>Repayment Cycle:</strong> @loan.RepaymentCycle</li>
                        </ul>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div>
                            @* <a asp-action="Detail" asp-route-id="@loan.Id" class="btn btn-sm btn-outline-success me-2">
                                <i class="bi bi-eye"></i>
                            </a> *@
                            <a asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                        <form id="delete-form-@loan.Id" asp-action="Delete" asp-route-id="@loan.Id" method="post" class="d-inline">
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    onclick="confirmDelete(@loan.Id,'@loan.ProductTitle')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info mt-3 mb-0 text-center">
            <strong>No data available.</strong>
        </div>
    }
</div>