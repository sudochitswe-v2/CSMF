@model CustomerReadDetailViewModel
@{
    ViewData["Title"] = $"Details - {Model.FirstName} {Model.LastName}";
}

<div class="container mt-4">
    <div class="accordion" id="customerAccordion">

        <!-- Section 1: User Info -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingUserInfo">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUserInfo" aria-expanded="true" aria-controls="collapseUserInfo">
                    <i class="bi bi-person me-2"></i>User Information
                </button>
            </h2>
            <div id="collapseUserInfo" class="accordion-collapse collapse show" aria-labelledby="headingUserInfo" data-bs-parent="#customerAccordion">
                <div class="accordion-body">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Identification Number</dt>
                        <dd class="col-sm-8">@Model.IdentificationNumber</dd>

                        <dt class="col-sm-4">Branch</dt>
                        <dd class="col-sm-8">@Model.Branch.Name</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Section 2: Documents / Assets -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingDocuments">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDocuments" aria-expanded="false" aria-controls="collapseDocuments">
                    <i class="bi bi-file-earmark-text me-2"></i>Documents / Assets
                </button>
            </h2>
            <div id="collapseDocuments" class="accordion-collapse collapse" aria-labelledby="headingDocuments" data-bs-parent="#customerAccordion">
                <div class="accordion-body">

                    <!-- Add Document Button -->
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Documents</h6>
                        <a asp-controller="Documents" asp-action="Create" asp-route-customerId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus-circle me-2"></i>Add Document
                        </a>
                    </div>

                    @if (Model.Documents.Any())
                    {
                        <ul class="list-group">
                            @foreach (var doc in Model.Documents)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold">@doc.FullName</span>
                                        @if (doc.Size > 0)
                                        {
                                            <small class="text-muted ms-1"
                                                   title="@($"{doc.Size} bytes")"
                                                   data-bs-toggle="tooltip">
                                                (@doc.DisplaySize)
                                            </small>
                                        }
                                        <small class="text-muted">@doc.DocumentType</small>

                                        <!-- Show Description if Available -->
                                        @if (!string.IsNullOrEmpty(doc.Description))
                                        {
                                            <div class="mt-2 text-truncate" style="max-width: 300px;"
                                                 title="@doc.Description">
                                                <small class="text-muted fst-italic">@doc.Description</small>
                                            </div>
                                        }

                                    </div>
                                    <div>
                                        <!-- Download Button -->
                                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.Id"
                                           class="btn btn-sm btn-outline-primary me-2"
                                           title="Download"
                                           data-bs-toggle="tooltip">
                                            <i class="bi bi-download"></i>
                                        </a>

                                        <!-- Delete Form -->
                                        <form id="delete-form-@doc.Id" asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.Id" method="post" class="d-inline">
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="confirmDelete('@doc.Id', '@doc.FullName')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No documents uploaded.</p>
                    }

                </div>
            </div>
        </div>

        <!-- Section 3: Loans -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingPersons">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePersons" aria-expanded="false" aria-controls="collapsePersons">
                    <i class="bi bi-people me-2"></i> Grantors
                </button>
            </h2>
            <div id="collapsePersons" class="accordion-collapse collapse" aria-labelledby="headingPersons" data-bs-parent="#customerAccordion">
                <div class="accordion-body">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Grantors</h6>
                        <a asp-controller="Grantors" asp-action="Create" asp-route-customerId="@Model.Id" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-plus-circle me-2"></i>Add Grantor
                        </a>
                    </div>

                    @if (Model.Grantors.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    @* <th>Loan ID</th> *@
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>NRC</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var grantor in Model.Grantors)
                                {
                                    <tr>
                                        <td>@grantor.FullName</td>
                                        <td>@grantor.Email</td>
                                        <td>@grantor.Phone</td>
                                        <td>@grantor.IdentificationNumber</td>
                                        <td>
                                            <!-- Delete Form -->
                                            <form id="delete-form-@grantor.Id" asp-controller="Grantors" asp-action="Delete" asp-route-id="@grantor.Id" method="post" class="d-inline">
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDelete('@grantor.Id', '@grantor.FullName')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No grantors found.</p>
                    }
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingLoans">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCustomerLoanApplications" aria-expanded="false" aria-controls="collapseCustomerLoanApplications">
                    <i class="bi bi-currency-dollar me-2"></i>Loans
                </button>
            </h2>
            <div id="collapseCustomerLoanApplications" class="accordion-collapse collapse" aria-labelledby="headingLoans" data-bs-parent="#customerAccordion">
                <div class="accordion-body">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Loan Applications</h6>
                        <a asp-controller="LoanApplications" asp-action="Create" asp-route-customer="@Model.Id" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-plus-circle me-2"></i>Apply for Loan
                        </a>
                    </div>

                    @if (Model.LoanApplications.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Loan ID</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Applied On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in Model.LoanApplications)
                                {
                                    <tr>
                                        <td>@loan.Id</td>
                                        <td>@loan.PrincipalAmount.ToString("N0")</td>
                                        <td>@loan.Status</td>
                                        <td>@loan.CreatedOn.ToShortDateString()</td>
                                        <td>
                                            <a asp-action="LoanStatement" asp-route-customerId="@Model.Id" asp-route-loanId="@loan.Id" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-file-earmark-spreadsheet"></i> Statement
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No grantors found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>