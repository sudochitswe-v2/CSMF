@model IEnumerable<CustomerReadViewModel>
@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phones</th>
            <th>Address</th>
            <th>Branch</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@($"{customer.FirstName} {customer.LastName}")</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Address</td>
                    <td>@customer.Branch.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary me-2">
                            <i class="bi bi-pencil-square"></i> 
                        </a>
                        <form id="delete-form-@customer.Id" asp-action="Delete" asp-route-id="@customer.Id" method="post" class="d-inline">
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    onclick="confirmDelete(@customer.Id,'branch')">
                                <i class="bi bi-trash"></i> 
                            </button>
                        </form>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">
                    <em>No data avaliable.</em>
                </td>
            </tr>
        }
    </tbody>
</table>



