@model IEnumerable<CSMF.WebMvc.Models.Users.UserReadViewModel>
@using CSMF.WebMvc.Domain.Constants
@{
    ViewData["Title"] = "System Users";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-add"></i> New
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Branches</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <small class="text-muted">
                        @if (user.Roles != null && user.Roles.Any())
                        {
                            <span class="badge bg-info">@string.Join(", ", user.Roles)</span>
                        }
                        else
                        {
                            <em>No roles assigned</em>
                        }
                    </small>
                </td>
                <td>
                    <small class="text-muted">
                        @if (user.Branches != null && user.Branches.Any())
                        {
                            <span class="badge bg-warning">@string.Join(", ", user.Branches)</span>
                        }
                        else
                        {
                            <em>No branches assigned</em>
                        }
                    </small>
                </td>
                <td>
                    @* @if (User.IsInRole(DefinedRole.Administrator.ToString())) *@
                    @* { *@
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    @if (User.IsInRole(DefinedRole.Administrator.ToString()))
                    {
                        <a asp-controller="Account" asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">
                            <i class="bi bi-lock-fill"></i>
                        </a>
                    }
                    @* } *@
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this user?');">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
