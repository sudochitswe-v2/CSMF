@model IEnumerable<CSMF.WebMvc.Models.Users.UserReadViewModel>
@using CSMF.WebMvc.Domain.Constants
@{
    ViewData["Title"] = "System Users";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles != null && user.Roles.Any())
                    {
                        <span>@string.Join(", ", user.Roles)</span>
                    }
                    else
                    {
                        <em>No roles assigned</em>
                    }
                </td>
                <td>
                    @* @if (User.IsInRole(DefinedRole.Administrator.ToString())) *@
                    @* { *@
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    @* } *@
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this user?');">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
