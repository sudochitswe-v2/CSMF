@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Internal Server Error</h4>
                </div>
                <div class="card-body">

                    <!-- Error Message -->
                    <p class="lead" id="errorMessage">@Model.Message</p>
                    <button class="btn btn-sm btn-outline-secondary ms-1" onclick="copyText('errorMessage')">
                        <i class="bi bi-clipboard me-1"></i>Copy Message
                    </button>

                    <!-- Request ID -->
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info mt-3 mb-0">
                            <strong>Request ID:</strong>
                            <code id="requestId">@Model.RequestId</code>
                            <button class="btn btn-sm btn-outline-secondary ms-1" onclick="copyText('requestId')">
                                <i class="bi bi-clipboard me-1"></i>Copy
                            </button>
                        </div>
                    }

                    <!-- Stack Trace - Collapsible -->
                    @if (!string.IsNullOrEmpty(Model.StackTrace))
                    {
                        <div class="mt-3">
                            <button class="btn btn-outline-danger btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#stackTraceCollapse" aria-expanded="false" aria-controls="stackTraceCollapse">
                                <i class="bi bi-exclamation-triangle me-1"></i>Show Stack Trace
                            </button>

                            <div class="collapse mt-3" id="stackTraceCollapse">
                                <pre id="stackTraceContent" class="bg-light p-3 rounded border small">@Model.StackTrace</pre>
                                <button class="btn btn-sm btn-outline-secondary" onclick="copyText('stackTraceContent')">
                                    <i class="bi bi-clipboard me-1"></i>Copy Stack Trace
                                </button>
                            </div>
                        </div>
                    }

                    <!-- Contact Info -->
                    <div class="mt-4">
                        <p>If the problem persists, please contact support.</p>
                        <a href="mailto:chitswe.dev@gmail.com"
                           class="btn btn-outline-primary">
                            <i class="bi bi-envelope me-2"></i>Contact Support
                        </a>
                    </div>

                    <!-- Go Back Button -->
                    <div class="mt-4">
                        <button onclick="window.history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function copyText(elementId) {
        const element = document.getElementById(elementId);
        const textToCopy = element?.innerText || element?.textContent;

        navigator.clipboard.writeText(textToCopy).then(() => {
            alert('Copied to clipboard');
        }).catch(err => {
            alert('Failed to copy: ' + err);
        });
    }
</script>